<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/comic</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="button_big" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/comic</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="strokeWidth">5dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="cornerRadius">40dp</item>
        <item name="backgroundTint">#caffffff</item>
    </style>
    <style name="button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/comic</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="strokeWidth">5dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">#caffffff</item>
    </style>
</resources>
